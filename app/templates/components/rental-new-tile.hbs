{{#if addNewRental}}
<article class="listing">
  <div class="detail title">
    <span>Title:</span> {{input value=title id="title" type="text"}}
  </div>
  <div class="detail contact">
    <span>Contact:</span> {{input value=contact id="contact" type="text"}}
  </div>
  <div class="detail address">
    <span>Address:</span> {{input value=address id="address" type="text"}}
  </div>
  <div class="detail city">
    <span>City:</span> {{input value=city id="city" type="text"}}
  </div>
  <div class="detail state">
    <span>State:</span> {{input value=state id="state" type="text"}}
  </div>
  <div class="detail zip">
    <span>Zip:</span> {{input value=zip id="zip" type="text"}}
  </div>
  <div class="detail bedrooms">
    <span>Number of bedrooms:</span> {{input value=bedrooms id="bedrooms" type="text"}}
  </div>
  <div class="detail bathrooms">
    <span>Number of bathrooms:</span> {{input value=bathrooms id="bathrooms" type="text"}}
  </div>
  <div class="detail cost">
    <span>Cost per month:</span> {{input value=cost id="cost" type="text"}}
  </div>
  <div class="detail image">
    <span>Image:</span> {{input value=image id="image" type="text"}}
  </div>
  <div class="detail description">
    <span>Description:</span> {{input value=description id="description" type="textarea"}}
  </div>
  <button class="button" {{action 'saveRental'}}>Save</button>
  <button class="button" {{action 'cancelSave'}}>Cancel</button>
</article>
{{else}}
  <button class="button" {{action 'rentalFormShow' }}>New Rental</button>
{{/if}}
